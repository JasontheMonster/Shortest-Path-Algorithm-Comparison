import java.util.ArrayList;
import java.util.Random;

/**
 * 
 */

/**
 * @author Jason
 *
 */
public class Graph {
	private float prob;//probability of existing edge between nodes 
	private int n; //maximun number of node
	private int flag; //0 for undirected, 1 for directed
	private ArrayList <Node>vertices;
	
	
	//constructor: randomly create a graph represented by LinkedList
	public Graph (float prob, int n, int flag){
		this.prob = prob;
		this.n = n;
		this.flag = flag;
	}
	
	public void randomGraph(){
		Random rand = new Random();
		int  num = rand.nextInt(this.n) + 1;
		
		for (int i =0; i<num; i++){
			ArrayList <Edge> adj = new ArrayList <Edge>();
			Node node = new Node(Integer.MAX_VALUE, adj);
			this.vertices.add(node);
		}
		
		
		
		
	}
	

}
